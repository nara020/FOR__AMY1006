<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/nav_drawer"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <Button
                android:id="@+id/btn_open"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_launcher_menu" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/korea_food"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:background="@mipmap/ic_launcher_korea"
                android:gravity="center|bottom"
                android:text="Korean food" />

            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:id="@+id/china_food"
                android:background="@mipmap/ic_launcher_china"
                android:gravity="center|bottom"
                android:text="Chinese food"/>

            <Button
                android:id="@+id/japan_food"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:background="@mipmap/ic_launcher_japan"
                android:gravity="center|bottom"
                android:text="Japanese food"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center">

            <Button
                android:id="@+id/ni_food"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:background="@mipmap/ic_launcher_night"
                android:gravity="center|bottom"
                android:text="Late-Night meal"
                android:textSize="12sp" />

            <Button
                android:id="@+id/italy_food"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:background="@mipmap/ic_launcher_italy"
                android:gravity="center|bottom"
                android:text="Italian food" />

            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:id="@+id/ch_food"
                android:background="@mipmap/ic_launcher_chicken"
                android:gravity="center|bottom"
                android:text="Chicken"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center">

            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:id="@+id/pi_food"
                android:background="@mipmap/ic_launcher_pizza"
                android:gravity="center|bottom"
                android:text="Pizza"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:id="@+id/ham_food"
                android:background="@mipmap/ic_launcher_hamburger"
                android:gravity="center|bottom"
                android:text="Hamburger"/>

            <Button
                android:id="@+id/communication"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:background="@mipmap/ic_launcher_communication"
                android:gravity="center|bottom"
                android:text="A bulletin board "
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <include layout="@layout/navigation_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>