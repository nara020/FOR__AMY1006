<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <Button
        android:id="@+id/_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#00FFFFFF"
        android:singleLine="true"
        android:text="최고당돈가스 수원대점(Choegodang dongaseu)" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <Button
        android:id="@+id/_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:text="산쪼메 수원대점(Sanjjome)" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <Button
        android:id="@+id/_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00F8F8F8"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:text="이찌돈 와우점(Ijjidon)" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <Button
        android:id="@+id/_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:text="참치사랑(Chamchisarang)" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <Button
        android:id="@+id/_5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:text="소래포구회이모네조개구이(Soraepoguhoeimonejogaegui)" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>



</LinearLayout>
</ScrollView>